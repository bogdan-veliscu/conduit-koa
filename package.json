{
  "name": "conduit-koa",
  "version": "1.0.0",
  "description": "A Koa and TypeORM implementation for the Conduit Real World Backend",
  "scripts": {
    "build": "rimraf ./build && tsc",
    "build:watch": "npm run build -- --watch",
    "dev": "concurrently \"npm run build:watch\" \"npm run start:watch\"",
    "start": "npm run build && ts-node src/index.ts",
    "start:watch": "nodemon lib/index.js --log",
    "lint": "eslint . --ext .ts",
    "lint-fix": "eslint . --ext .ts --fix",
    "prettier-format": "run-script-os",
    "prettier-format:win32": "prettier --config .prettierrc \"./src/**/*.ts\" --write",
    "prettier-format:darwin:linux": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-format:default": "prettier --config .prettierrc 'src/**/*.ts' --write",
    "prettier-watch": "run-script-os",
    "prettier-watch:win32": "onchange \"src/**/*.ts\" -- prettier --write {{changed}}",
    "prettier-watch:darwin:linux": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "prettier-watch:default": "onchange 'src/**/*.ts' -- prettier --write {{changed}}",
    "test": "jest",
    "test:dev": "jest --watchAll"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run test && npm run prettier-format && npm run lint"
    }
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@koa/cors": "^3.1.0",
    "awilix": "^4.2.5",
    "awilix-koa": "^4.0.0",
    "concurrently": "^6.4.0",
    "crosenv": "^1.0.0",
    "cross-env": "^7.0.3",
    "dotenv": "^10.0.0",
    "http-status-codes": "^1.4.0",
    "jsonwebtoken": "^8.5.1",
    "kcors": "^2.2.2",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-helmet": "^6.1.0",
    "koa-router": "^10.1.1",
    "koa-swagger-decorator": "^1.8.0",
    "pg": "^8.7.1",
    "reflect-metadata": "^0.1.13",
    "slugify": "^1.4.0",
    "typeorm": "^0.2.40",
    "winston": "^3.2.1"
  },
  "keywords": [
    "node",
    "koa",
    "typeormm",
    "typscript",
    "docker",
    "postgres"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "@babel/node": "^7.14.5",
    "@types/jest": "^26.0.14",
    "@types/koa__cors": "^3.0.1",
    "@types/koa-bodyparser": "^5.0.2",
    "@types/koa-logger": "^3.1.0",
    "@types/koa-router": "7.4.0",
    "@types/node": "^15.12.2",
    "@types/ramda": "^0.26.6",
    "@types/uuid": "^3.4.5",
    "@types/hapi__joi": "^16.0.12",
    "@types/yargs-parser": "^15.0.0",
    "@typescript-eslint/eslint-plugin": "^2.21.0",
    "@typescript-eslint/parser": "^2.21.0",
    "eslint": "^6.8.0",
    "eslint-config-airbnb-base": "^14.0.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-import": "^2.18.2",
    "eslint-plugin-prettier": "^3.1.2",
    "husky": "^4.3.8",
    "jest": "^26.5.3",
    "jest-junit": "^10.0.0",
    "nodemon": "^2.0.7",
    "onchange": "^6.1.0",
    "opn-cli": "^1.0.0",
    "prettier": "^1.19.1",
    "rimraf": "^3.0.2",
    "run-script-os": "^1.1.1",
    "ts-jest": "^26.4.1",
    "ts-node": "^10.0.0",
    "typescript": "^4.3.2"
  }
}
